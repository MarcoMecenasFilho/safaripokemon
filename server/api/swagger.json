{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Safari Pokemon",
    "description": "Essa API tem como objetivo a manipulação de dados de pokemon.",
    "version": "1.0.0",
    "contact": {
      "email": "marcomecenasfilho@gmail.com",
      "url": "https://marcomecenasfilho.vercel.app/"
    }
  },
    "servers": [
      {
        "url": "http://localhost:3001",
        "description": "API de test"
      }
    ],
  "paths": {
    "/pokemon": {
      "post": {
        "summary": "Cria um novo pokemon",
        "description": "Essa rota ira criar um novo pokemon no banco de dados",
        "tags": ["pokemon"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PokemonCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "$ref": "#/components/schemas/PokemonCreate"
                }
              }
            }
          },
          "409": {
            "description": "Conflito",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf":[ 
                  {"$ref": "#/components/schemas/PokemonNameExists"},
                  {"$ref": "#/components/schemas/PokemonIdExists"}
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf":[ 
                  {"$ref": "#/components/schemas/NameRequired"},
                  {"$ref": "#/components/schemas/NameEmpty"},
                  {"$ref": "#/components/schemas/IdRequired"},
                  {"$ref": "#/components/schemas/IdEmpty"},
                  {"$ref": "#/components/schemas/ImageRequired"},
                  {"$ref": "#/components/schemas/ImageEmpty"}
                  ]
                }
              }
            }
          },
          "422": {
            "description": "Erro de validação",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf":[ 
                  {"$ref": "#/components/schemas/IdTypeNumber"},
                  {"$ref": "#/components/schemas/IdInteger"},
                  {"$ref": "#/components/schemas/IdPositive"}
                  ]
                }
              }
            }
          }
        }
    },
      "delete": {
        "summary": "Deleta um  pokemon",
        "description": "Essa rota ira deletar um  pokemon no banco de dados",
        "tags": ["pokemon"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PokemonDelete"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "OK"
          },
          "400": {
            "description": "Requisição inválida",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf":[ 
                  {"$ref": "#/components/schemas/NameRequired"},
                  {"$ref": "#/components/schemas/NameEmpty"}
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PokemonDeleteNotFoundInDB"
                }
              }
            }
          }
        }},
      "get":{
        "summary": "Lista pokemon procurado no banco de dados",
        "description": "Essa rota ira procurar o pokemon no banco de dados",
        "tags": ["pokemon"],
        "parameters": [
          {
            "name": "namepokemon",
            "in": "query",
            "description": "Nome do Pokemon para buscar no bando de dados",
            "required": true,
            "schema": {
              "example": "Pikachu"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                    "$ref": "#/components/schemas/PokemonSearch"
                }
              }
            }
          },
          "404": {
            "description": "Não encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PokemonNotFound"
                }
              }
            }
          }
        }
      }
      }
  },
  "components": {
    "schemas": {
      "PokemonSearch": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number",
            "example": 25
          },
          "name": {
            "type": "string",
            "example": "Pikachu"
          },
          "image": {
            "type": "string",
            "example": "https://assets.pokemon.com/assets/cms2/img/pokedex/full/025.png"
          }
        }
      },
      "PokemonNotFound": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Pikachu not found"
          }
        }
      },
      "PokemonCreate": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "example": "Butterfree"
          },
          "id": {
            "type": "number",
            "example": 12
          },
          "image": {
            "type": "string",
            "example": "https://assets.pokemon.com/assets/cms2/img/pokedex/full/012.png"
          }
        }},
        "PokemonDelete": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "example": "Bulbasaur"
            }
          }
      },
      "PokemonIdExists": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Pokemon id already exists"
          }
        }
      },
      "PokemonNameExists": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Pokemon name already exists"
          }
        }
      },
      "NameRequired": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Name is required"
          }
        }
      },
      "NameEmpty": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Name is not allowed to be empty"
          }
        }
      },
      "IdRequired": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Id is required"
          }
        }
      },
      "IdEmpty": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Id is not allowed to be empty"
          }
        }
      },
      "IdTypeNumber": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Id must be a number"
          }
        }
      },
      "IdInteger": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Id must an integer"
          }
        }
      },
      "IdPositive": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Id must be greater than or equal to 1"
          }
        }
      },
      "ImageRequired": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Image is required"
          }
        }
      },
      "ImageEmpty": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Image is not allowed to be empty"
          }
        }
      },
      "PokemonDeleteNotFoundInDB": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Bulbasaur does not exist in the database to be deleted"
          }
        }
      }
    }
  }
}
